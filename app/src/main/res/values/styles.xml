<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LabelTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sriracha</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextTextStyle">
        <item name="android:background">@drawable/red_outline</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/cantarell_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/cantarell_bold</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ResultTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/red_700</item>
        <item name="fontFamily">@font/sriracha</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/red_outline</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownSelector">@color/red_700</item>
        <item name="minHeight">50dp</item>
    </style>

</resources>